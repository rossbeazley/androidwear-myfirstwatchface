<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:id="@+id/rotate_container"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:background="@android:color/transparent"
        android:layout_gravity="center"
        >

        <include layout="@layout/watch_face_view"/>

    </LinearLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/rotate_right_arrow"
        android:id="@+id/rotate_button"
        android:layout_gravity="center"
        android:alpha="0.7"
        />


    <ImageView android:layout_width="60dp"
        android:layout_height="30dp"
        android:id="@+id/black_button"
        android:src="@drawable/black_button"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="27dp"
        android:layout_gravity="bottom|center_horizontal"
        />

    <ImageView android:layout_width="60dp"
        android:layout_height="30dp"
        android:id="@+id/white_button"
        android:src="@drawable/white_button"
        android:layout_marginLeft="45dp"
        android:layout_marginBottom="27dp"
        android:layout_gravity="bottom|center_horizontal"
        />

    <TextView
        android:id="@+id/next_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M\nO\nR\nE"
        android:textSize="18sp"
        android:textColor="@color/blue"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="10dp"
        android:textIsSelectable="false"
        android:visibility="gone" />

</FrameLayout>