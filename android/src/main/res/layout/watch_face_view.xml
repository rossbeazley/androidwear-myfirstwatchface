<?xml version="1.0" encoding="utf-8"?>

<uk.co.rossbeazley.wear.android.ui.WatchFaceView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:id="@+id/watch_face_view"
    tools:showIn="@layout/rotate">

    <TextView
        android:id="@+id/date"
        tools:text="29th December"
        style="@style/date" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/watch_time_container"
        android:layout_centerInParent="true"
        >

    <TextView
        android:id="@+id/watch_time"
        android:textSize="80sp"
        android:fontFamily="sans-serif-thin"
        android:layout_weight="0.5"
        android:textColor="#ff0000"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:gravity="end"
        tools:text="11"
        />

    <TextView
        android:id="@+id/watch_time_mins"
        android:textSize="80sp"
        android:fontFamily="sans-serif-thin"
        android:layout_weight="0.5"
        android:textColor="#aaaaaa"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:gravity="start"
        tools:text="23"
        />

    </LinearLayout>


    <TextView
        android:id="@+id/watch_time_secs"
        android:textSize="36sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/watch_time_container"
        android:textColor="#aaaaaa"
        android:alpha="0.2"
        android:gravity="center"
        tools:text="03"
        />

</uk.co.rossbeazley.wear.android.ui.WatchFaceView>