<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_plus_signin_btn_text_light_disabled"
    android:id="@+id/rotate_container"
    android:gravity="center"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:text="Choose a style"
        android:textSize="16sp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginRight="100dp"
        android:background="@color/black"
        android:id="@+id/black_button"
        android:layout_gravity="center"
        >
        <include layout="@layout/watch_face_view"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="100dp"
        android:background="@color/white"
        android:id="@+id/white_button"
        android:layout_gravity="center"
        >
        <include layout="@layout/watch_face_view"/>
    </LinearLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/rotate_right_arrow"
        android:id="@+id/rotate_button"
        android:layout_gravity="center"
        android:alpha="0.7"
        />

</FrameLayout>